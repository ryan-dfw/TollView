<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/tvDark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPrevVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvCurrent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSpeedVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="74dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvCurrent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBearingVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="105dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvCurrent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRoadVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="135dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvCurrent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvClosestTollVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="184dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvCurrent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTollDistVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="216dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvCurrent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCurrent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Prev:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tvCurrent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrent" />

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Speed:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tvCurrent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrent" />

    <TextView
        android:id="@+id/tvBearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Bearing:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tvCurrent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrent" />

    <TextView
        android:id="@+id/tvClosestToll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="ClosestToll:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tvCurrent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrent" />

    <TextView
        android:id="@+id/tvTollDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="TollDist:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tvCurrent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrent" />

    <TextView
        android:id="@+id/tvRoadName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Road:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tvCurrent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrent" />

    <Button
        android:id="@+id/btnDebugGiveDummyTolls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/tvDebug"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:text="Get Dummy Tolls"
        android:textColor="@color/tvBlue"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDebugGetAllGates"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnDebugAssignRandomToll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/tvDebug"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:text="Random Toll"
        android:textColor="@color/tvBlue"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDebugGetAllGates"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:backgroundTint="@color/tvAccentSoft"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:text="Sign Out"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnDebugGetAllGates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/tvDebug"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:text="Get All Gates"
        android:textColor="@color/tvBlue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current:"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvCurrentVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvCurrent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>